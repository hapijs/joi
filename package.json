{
    "name": "joi",
    "description": "Object schema validation",
    "version": "18.0.1",
    "repository": {
        "url": "git://github.com/hapijs/joi",
        "type": "git"
    },
    "engines": {
        "node": ">= 20"
    },
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
