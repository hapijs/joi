    "devDependencies": {
        "@hapi/bourne": "^3.0.0",
        "@hapi/code": "^9.0.3",
        "@hapi/eslint-plugin": "^7.0.0",
        "@hapi/joi-legacy-test": "npm:@hapi/joi@15.x.x",
        "@hapi/lab": "^26.0.0",
        "@types/node": "^20.17.47",
        "typescript": "^5.8.3"
    },
    "scripts": {
        "prepublishOnly": "cd browser && npm install && npm run build",
